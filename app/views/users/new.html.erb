<h2>新規登録</h2>
<%= render "shared/error", obj: @user %>

<%= form_with(model: User.new, url: users_new_path, local: true) do |f| %>

<div class="field">
<%= f.label :名前 %></br>
<%= f.text_field :name %>
</div> 

<div class="field">
<%= f.label :メールアドレス %></br>
<%= f.email_field :email %>
</div>

<div class="field">
<%= f.label :パスワード %></br>
<%= f.password_field :password %>
</div>

<div class="field">
<%= f.label :パスワード確認 %></br>
<%= f.password_field :password %>
</div>

<div class="field">
<%= f.label :自己紹介 %></br>
<%= f.text_area :introduction %>
</div>

<div class="field">
<%= f.label :プロフィール画像 %></br>
<%= f.file_field :avatar %>
</div>

<div class="actions">
<%= f.submit "新規登録" %>
</div>

<% end %>